<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 다른 mapper와 중복되지 않도록 네임스페이스 기재 -->
<mapper namespace="memList">
    <!-- 아이디 및 비번 비교 -->
    <select id="idpwcheck" resultType="java.lang.Integer" parameterType="map">
            SELECT COUNT(*) FROM user_ID where user_id = #{id} and user_pw = #{pw}
    </select>
    
    <select id="memberList" resultType="com.test.dto.MemberInfo">
    		SELECT * FROM meminfo
    </select>
    
    <!-- memberInsert -->
    <insert id="memberInsert" parameterType="map">
    		INSERT INTO meminfo(name, level, dept, del) VALUES(#{memName}, #{memLevel}, #{memDept}, 'N')
    </insert>
 
 	<select id="memberSearch" parameterType="map" resultType="com.test.dto.MemberInfo">
 			SELECT * FROM meminfo where 1=1 dept=#{selectP} and name=#{searchT}
 	</select>

</mapper>